{
  "expo": {
    "name": "İzmir Metro & Otobüs",
    "slug": "izmir-metro-otobus",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#0D47A1",
      "resizeMode": "contain"
    },
    "scheme": "izmir-transit",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.izmir.metro.otobus",
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleDisplayName": "İzmir Metro",
        "NSLocationWhenInUseUsageDescription": "Bu uygulama, yakındaki ulaşım duraklarını bulmak ve mevcut konumunuzdan güzergahları hesaplamak için konumunuzu kullanır.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Bu uygulama, yakındaki ulaşım duraklarını bulmak ve mevcut konumunuzdan güzergahları hesaplamak için konumunuzu kullanır."
      }
    },
    "android": {
      "package": "com.izmirmetro.app",
      "adaptiveIcon": {
        "backgroundColor": "#0D47A1",
        "foregroundImage": "./assets/adaptive-icon.png"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      "expo-sqlite",
      "expo-localization",
      "expo-location",
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "f84e0f28-ab1d-43fe-a141-70c64873f90c"
      },
      "adsDisabled": true,
      "amplitudeApiKey": "555ca3e6aa4e16758e13886cc194a4f9"
    }
  }
}
